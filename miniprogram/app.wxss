@import "./style/iconfont.wxss";
page {
  padding-bottom: 30rpx;
  background: #f9f9f9;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.radio-container {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 220rpx;
  height: 60rpx;
  margin-top: 20rpx;
  background-color: #eeeeee;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
}
.radio-image {
  margin-left: 20rpx;
  height: 45rpx;
  width: 45rpx;
  margin-right:10px;
}
.radio-duration {
  font-size: 30rpx;
  line-height: 42rpx;
}
