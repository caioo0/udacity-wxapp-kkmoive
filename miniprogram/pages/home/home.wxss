.button-wrapper {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height:100rpx;
  flex-direction: row;
  justify-content: space-around;
  background-color: #ffffff;
  box-shadow: 1rpx 1.5rpx 0 0 rgba(0,0,0,.12), 1rpx 0 0 0 rgba(0,0,0,.24);
  z-index: 999;
}
navigator.button-with-icon {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
}
.button-wrapper image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 15rpx;
}
.button-wrapper text {
  font-size: 30rpx;
  line-height: 42rpx;
}
.container {
  padding: 50rpx 80rpx 0;
  position: relative;
}
.movie-image {
  width: 100%;
  border-radius: 30rpx;
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
}
.movie-title {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 20rpx;
  
}
.content-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin-top: 20rpx;
}
.user-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.content-text {
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.movie-empty {
  margin: 50rpx;
  height: 300rpx;
  width: 650rpx;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-image {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}
.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}
.skip-buttons{
  position: fixed;
  bottom: 0; 
  display: flex;
  flex-direction: row;
  width: 100%;
  background: #F6F6F6;
  color:#7F99AF
}
.skip-buttons .btn{
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
